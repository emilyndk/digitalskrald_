---

const {variant="primary", size="medium", } = Astro.props;


// g√¶lder for alle //
const buttonStyling = "font-normal rounded";

const variantClasses ={
"primary": "bg-cyan-600 text-white border-2 border-cyan-600  hover:bg-white hover:text-cyan-600 hover:border-2 hover:border-cyan-600",
"secondary": "text-cyan-600 border-cyan-600 bg-white border-2 border-cyan-600 hover:bg-cyan-600 hover:text-white"
};

const sizeClasses ={
    "large":"text-4xl px-10",
    "medium": "text-2xl px-8",
    "small": "text-xl px-4"
};
